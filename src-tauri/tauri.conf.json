{
  "productName": "Traffic Light",
  "version": "1.0.0",
  "identifier": "com.MinuteApps.trafficlight",
  "build": {
    "frontendDist": "../src"
  },
  "app": {
    "windows": [
      {
        "title": "Traffic Light",
        "width": 210,
        "height": 460,
        "minWidth": 210,
        "minHeight": 460,
        "alwaysOnTop": true,
        "transparent": true,
        "decorations": false,
        "resizable": true,
        "maximizable": false
      }
    ],
    "security": {
      "csp": "default-src 'self'; media-src 'self' blob:; script-src 'self' 'unsafe-inline' https://esm.sh; connect-src 'self' https://esm.sh;"
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico",
      "icons/icon.png"
    ]
  }
}